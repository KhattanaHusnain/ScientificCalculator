<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0A0A0A"
    tools:context=".MainActivity">

    <!-- Status Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="#141414">
        <TextView
            android:id="@+id/mode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ALGEBRA MODE"
            android:textColor="#00BCD4"
            android:textSize="12sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Display Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#0A0A0A"
        android:gravity="center|end"
        android:padding="24dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/expression"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#888888"
            android:textSize="20sp"
            android:gravity="end"
            android:fontFamily="sans-serif"/>
        <TextView
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="48sp"
            android:gravity="end"
            android:fontFamily="sans-serif-light"/>
    </LinearLayout>

    <!-- Algebra Operations Panel -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1A1A1A"
        android:padding="8dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/btn_simplify"
                style="@style/ButtonAction"
                android:text="Simplify"
                android:paddingHorizontal="10dp"
                android:layout_marginEnd="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/btn_expand"
                style="@style/ButtonAction"
                android:text="Expand"
                android:paddingHorizontal="10dp"
                android:layout_marginEnd="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/btn_factor"
                style="@style/ButtonAction"
                android:text="Factor"
                android:paddingHorizontal="10dp"
                android:layout_marginEnd="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/btn_solve"
                style="@style/ButtonAction"
                android:text="Solve"
                android:paddingHorizontal="10dp"
                android:layout_marginEnd="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/btn_evaluate"
                style="@style/ButtonAction"
                android:text="Evaluate"
                android:paddingHorizontal="10dp"
                android:layout_marginEnd="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/btn_derivative"
                style="@style/ButtonAction"
                android:text="Derivative"
                android:paddingHorizontal="10dp"
                android:layout_marginEnd="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/btn_integration"
                style="@style/ButtonAction"
                android:text="Integration"
                android:paddingHorizontal="10dp"
                android:layout_marginEnd="4dp"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Button Grid -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Row 1: Variables and Power -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn_x"
                style="@style/ButtonSecondary"
                android:text="x"/>
            <TextView
                android:id="@+id/btn_y"
                style="@style/ButtonSecondary"
                android:text="y"/>
            <TextView
                android:id="@+id/btn_z"
                style="@style/ButtonSecondary"
                android:text="z"/>
            <TextView
                android:id="@+id/btn_power"
                style="@style/ButtonTertiary"
                android:text="xʸ"/>
            <TextView
                android:id="@+id/btn_sqrt"
                style="@style/ButtonTertiary"
                android:text="√"/>
        </LinearLayout>

        <!-- Row 2: Advanced Functions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn_square"
                style="@style/ButtonTertiary"
                android:text="x²"/>
            <TextView
                android:id="@+id/btn_open_paren"
                style="@style/ButtonTertiary"
                android:text="("/>
            <TextView
                android:id="@+id/btn_close_paren"
                style="@style/ButtonTertiary"
                android:text=")"/>
            <TextView
                android:id="@+id/btn_abs"
                style="@style/ButtonTertiary"
                android:text="|x|"/>
            <TextView
                android:id="@+id/btn_equals_sign"
                style="@style/ButtonTertiary"
                android:text="="/>
        </LinearLayout>

        <!-- Row 3: Numbers 7-9 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn_7"
                style="@style/ButtonPrimary"
                android:text="7"/>
            <TextView
                android:id="@+id/btn_8"
                style="@style/ButtonPrimary"
                android:text="8"/>
            <TextView
                android:id="@+id/btn_9"
                style="@style/ButtonPrimary"
                android:text="9"/>
            <TextView
                android:id="@+id/btn_divide"
                style="@style/ButtonOperator"
                android:text="÷"/>
            <TextView
                android:id="@+id/btn_delete"
                style="@style/ButtonAction"
                android:text="DEL"/>
        </LinearLayout>

        <!-- Row 4: Numbers 4-6 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn_4"
                style="@style/ButtonPrimary"
                android:text="4"/>
            <TextView
                android:id="@+id/btn_5"
                style="@style/ButtonPrimary"
                android:text="5"/>
            <TextView
                android:id="@+id/btn_6"
                style="@style/ButtonPrimary"
                android:text="6"/>
            <TextView
                android:id="@+id/btn_multiply"
                style="@style/ButtonOperator"
                android:text="×"/>
            <TextView
                android:id="@+id/btn_clear"
                style="@style/ButtonAction"
                android:text="AC"/>
        </LinearLayout>

        <!-- Row 5: Numbers 1-3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn_1"
                style="@style/ButtonPrimary"
                android:text="1"/>
            <TextView
                android:id="@+id/btn_2"
                style="@style/ButtonPrimary"
                android:text="2"/>
            <TextView
                android:id="@+id/btn_3"
                style="@style/ButtonPrimary"
                android:text="3"/>
            <TextView
                android:id="@+id/btn_add"
                style="@style/ButtonOperator"
                android:text="+"/>
            <TextView
                android:id="@+id/btn_subtract"
                style="@style/ButtonOperator"
                android:text="−"/>
        </LinearLayout>

        <!-- Row 6: Bottom Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn_0"
                style="@style/ButtonPrimary"
                android:text="0"/>
            <TextView
                android:id="@+id/btn_decimal"
                style="@style/ButtonPrimary"
                android:text="."/>
            <TextView
                android:id="@+id/btn_negate"
                style="@style/ButtonTertiary"
                android:text="(−)"/>
            <TextView
                android:id="@+id/btn_enter"
                style="@style/ButtonEquals"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="ENTER"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>